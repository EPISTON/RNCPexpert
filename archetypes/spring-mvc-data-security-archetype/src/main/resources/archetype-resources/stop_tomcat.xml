#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<project name="TomcatRunner" default="stop" basedir="."> 
	<target name="stop">
	  <exec executable="cmd" dir="${tomcatHome}${symbol_escape}bin">
	    <arg value="/c"/>
	    <arg value="shutdown.bat"/>
	    <arg value="-p"/>
	  </exec>
	</target>	
</project>